# ===========================================
# Windhoek Tourism Portal - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE (Required)
# ===========================================
# Supabase PostgreSQL connection string
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://postgres.xxxxx:your-password@aws-0-eu-central-1.pooler.supabase.com:6543/postgres

# ===========================================
# AUTHENTICATION (Required)
# ===========================================
# JWT secret for session tokens (must be at least 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-at-least-32-characters-long

# Enable Supabase Auth (set to 'true' for self-hosted)
USE_SUPABASE_AUTH=true

# Supabase project URL (from Supabase Dashboard > Settings > API)
SUPABASE_URL=https://xxxxx.supabase.co
VITE_SUPABASE_URL=https://xxxxx.supabase.co

# Supabase anonymous/public key (from Supabase Dashboard > Settings > API)
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase service role key (server-side only, keep secret!)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ===========================================
# APP CONFIGURATION
# ===========================================
# Application title and branding
VITE_APP_TITLE=Windhoek Tourism Portal
VITE_APP_LOGO=/logo.svg

# Node environment
NODE_ENV=production

# Server port (default: 3000)
PORT=3000

# ===========================================
# OPTIONAL: EXTERNAL SERVICES
# ===========================================
# Google Maps API Key (for route maps)
# VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Analytics (optional)
# VITE_ANALYTICS_WEBSITE_ID=your-analytics-id
# VITE_ANALYTICS_ENDPOINT=https://your-analytics-endpoint
